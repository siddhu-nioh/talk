<% layout('./layouts/boilerplate.ejs') %>
<link rel="stylesheet" type="text/css" href="/css/login.css">
<body>
      <h2 class="Head">Modal Login Form</h2>
      <button onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Login</button>
      <div id="id01" class="modal">
            <form class="modal-content animate" action="/login" method="post">
                  <div class="imgcontainer">
                        <span onclick="document.getElementById('id01').style.display='none'" class="close"
                              title="Close Modal">&times;</span>
                        <div class="icon-container">
                              <div class="microphone-icon">
                                    <div class="icon-text">T</div>
                              </div>
                        </div>
                  </div>
                  <div class="container">
                        <label for="uname"><b>Username</b></label>
                        <input type="text" placeholder="Enter Username" name="username" required>
                        <label for="psw"><b>Password</b></label>
                        <input type="password" placeholder="Enter Password" name="password" required>
                        <button type="submit">Login</button>
                        <label>
                              <input type="checkbox" checked="checked" name="remember"> Remember me
                        </label>
                  </div>
                  <div class="container" style="background-color:#f1f1f1">
                        <button type="button" onclick="document.getElementById('id01').style.display='none'"
                              class="cancelbtn">Cancel</button>
                        <span class="psw">Forgot <a href="#">password?</a></span>
                        <span class="psw">No account? <a href="#"
                                    onclick="document.getElementById('id02').style.display='block'">Create an
                                    account</a></span>
                  </div>
            </form>
      </div>
      <div id="id02" class="modal">
            <form class="modal-content animate" action="/signup" method="post">
                  <div class="imgcontainer">
                        <span onclick="document.getElementById('id02').style.display='none'" class="close"
                              title="Close Modal">&times;</span>
                  </div>
                  <div class="container">
                        <label for="email"><b>Email</b></label>
                        <input type="text" placeholder="Enter Email" name="email" required>
                        <label for="uname"><b>Username</b></label>
                        <input type="text" placeholder="Enter Username" name="username" required>
                        <label for="profile">Email:</label>
                        <input type="file" id="profile" name="profile" required>
                        <label for="psw"><b>Password</b></label>
                        <input type="password" placeholder="Enter Password" name="password" required>

                        <button type="submit">Create Account</button>
                  </div>

                  <div class="container" style="background-color:#f1f1f1">
                        <button type="button" onclick="document.getElementById('id02').style.display='none'"
                              class="cancelbtn">Cancel</button>
                  </div>
            </form>
      </div>

      <script>
            // Get the modals
            var modalLogin = document.getElementById('id01');
            var modalSignup = document.getElementById('id02');

            // When the user clicks anywhere outside of the modals, close them
            window.onclick = function (event) {
                  if (event.target == modalLogin) {
                        modalLogin.style.display = "none";
                  }
                  if (event.target == modalSignup) {
                        modalSignup.style.display = "none";
                  }
            }
      </script>
</body>
